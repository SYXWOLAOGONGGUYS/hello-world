// Select the button
const button = document.getElementById("mimimimi");

// Add a click event listener
button.addEventListener("click", () => {
  // Change the background color of the div
  const container = document.querySelector(".peepeepoopoo");
  container.style.backgroundColor = "lightpink";

  // Optional: Log a message to the console
  console.log("Background color changed to lightpink!");
});
